<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InCallButton">
        <item name="android:background">@drawable/incall_btn_background</item>
        <item name="android:layout_width">@dimen/in_call_button_width</item>
        <item name="android:layout_height">@dimen/in_call_button_height</item>
    </style>
    <style name="InCallCompoundButton" parent="@style/InCallButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>
    <style name="InCallEndButton">
        <item name="android:background">@drawable/endcall_background</item>
        <item name="android:layout_width">241.0dip</item>
        <item name="android:layout_height">@dimen/in_call_button_height</item>
    </style>
    <style name="DialpadButtonStyle">
        <item name="android:background">@drawable/dialpad_button_background</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="PrimaryCallInfoPrimaryCallBanner">
        <item name="android:layout_alignParentBottom">false</item>
    </style>
    <style name="SecondaryCallInfoSecondaryCallName">
        <item name="android:layout_gravity">bottom|left|center</item>
    </style>
    <style name="SecondaryCallInfoSecondaryCallStatus">
        <item name="android:layout_gravity">bottom|right|center</item>
    </style>
    <style name="PrimaryCallInfoSecondaryInfoContainer">
        <item name="android:layout_above">@id/primary_call_banner</item>
    </style>
</resources>
